<!DOCTYPE html>
<html>
<head>
    <title>Students List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #eef2f7;
            margin: 0;
            padding: 0;
        }
        h1 {
            text-align: center;
            color: #2c3e50;
            margin-top: 20px;
        }
        a {
            text-decoration: none;
            padding: 8px 12px;
            background: #27ae60;
            color: white;
            border-radius: 5px;
            transition: 0.3s;
        }
        a:hover {
            background: #1e8449;
        }
        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            background: white;
            box-shadow: 0px 4px 8px rgba(0,0,0,0.1);
            border-radius: 8px;
            overflow: hidden;
        }
        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background: #3498db;
            color: white;
        }
        tr:hover {
            background: #f1f9ff;
        }
        button {
            background: #e74c3c;
            color: white;
            border: none;
            padding: 6px 10px;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s;
        }
        button:hover {
            background: #c0392b;
        }
        .edit-btn {
            background: #f39c12;
            color: white;
            padding: 6px 10px;
            border-radius: 5px;
            transition: 0.3s;
        }
        .edit-btn:hover {
            background: #d68910;
        }
        .top-bar {
            width: 80%;
            margin: auto;
            text-align: right;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <h1>All Students in students collection</h1>
    <div class="top-bar">
        <a href="/input">+ Add New Student</a>
    </div>
    <table>
        <tr>
            <th>Name</th>
            <th>Roll No</th>
            <th>Course</th>
            <th>Actions</th>
        </tr>
        <% students.forEach(student => { %>
            <tr>
                <td><%= student.name %></td>
                <td><%= student.rollno %></td>
                <td><%= student.course %></td>
                <td>
                    <form action="/delete/<%= student._id %>" method="post" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                    <a href="/edit/<%= student._id %>" class="edit-btn">Edit</a>
                </td>
            </tr>
        <% }) %>
    </table>
</body>
</html>
